<section class="section">
  <div class="container-fluid">
    <div class="h2 d-inline-flex">Project:</div>
    <div class="p d-flex"><%= image_tag @project.image, class: "img-thumbnail img-small"  if @project.image.attached? %></div>
    <div class="d-flex">
      Project Name: <%= @project.name %>
    </div>
    <div class="d-flex">
      Number of Views: <%= @project.clicks %>
    </div>
    <div class="d-flex">
      URL of Project: <%= link_to @project.uri, @project.uri, :class => "btn  btn-link btn-sm" %>
    </div>
    <div class="d-flex">
      Data: <%= render '/projects/data' %>
    </div>
    <div class="d-flex">
      Last Viewed: <%= @project.last_viewed %>
    </div>
  </div>
</section>

<section class="section">
  <div class="level-right">
    <span class="h4">
        <% if allow_project_modify?(@project) %>
          <%= link_to "Edit", edit_project_path(@project), class:"btn btn-success rounded-pill" %> |
        <% end %>
        <%= link_to 'Back', projects_path, class:"btn btn-info rounded-pill" %>
    </span>
  </div>
</section>