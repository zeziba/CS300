<%= form_for project, :html => {:class => "form-horizontal"} do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= form.label :name, "Name:", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= form.label :uri, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= form.url_field :uri, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <%= form.label :image, "image:", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= form.file_field :image, class: 'form-control', accept: 'image/png,image/gif,image/jpeg' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :data, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= form.text_area :data, class: 'form-control', :rows => 3 %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
